<div id="feedback-widget" style="position: fixed; bottom: 20px; right: 20px; z-index: 9999;">
  <!-- Feedback Button -->
  <button 
    id="feedback-widget-button" 
    style="background-color: {{ settings.button_color }}; padding: 10px 20px; border-radius: 8px; color: white; border: none; cursor: pointer; font-size: 16px;"
  >
    {{ settings.button_text }}
  </button>

  <!-- Feedback Modal -->
  <div 
    id="feedback-modal" 
    style="display: none; position: fixed; bottom: 80px; right: 20px; background-color: white; padding: 20px; border: 1px solid #ccc; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); width: 320px; z-index: 10000;"
  >
    <h3 style="margin: 0 0 10px; font-size: 18px; color: #333;">We'd love to hear your feedback!</h3>
    <textarea 
      id="feedback-text" 
      placeholder="Enter your feedback here..." 
      style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px;"
    ></textarea>
    <input 
      type="email" 
      id="feedback-email" 
      placeholder="Your email (optional)" 
      style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px;"
    />
    <div>
      <!-- Submit Button -->
      <button 
        id="submit-feedback" 
        style="background-color: #007acc; color: white; padding: 10px; width: 100%; border: none; border-radius: 4px; font-size: 14px; margin-bottom: 10px;"
      >
        Submit
      </button>
      <!-- Close Modal Button -->
      <button 
        id="close-modal" 
        style="background-color: #f44336; color: white; padding: 10px; width: 100%; border: none; border-radius: 4px; font-size: 14px;"
      >
        Close
      </button>
    </div>
  </div>
</div>

<!-- Include Feedback Widget Script -->
<script src="{{ 'feedback_icon.js' | asset_url }}" defer></script>

<!-- Schema Tag for Settings -->
{% schema %}
{
  "name": "Feedback Widget",
  "target": "section",
  "settings": [
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#007acc"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "üìù Feedback"
    }
  ]
}
{% endschema %}
