<div id="feedback-widget" style="position: fixed; bottom: 20px; right: 20px; z-index: 9999;">
  <button id="feedback-widget-button" style="background-color: {{ settings.button_color }}; padding: 10px; border-radius: 50%; color: white; cursor: pointer;">
    {{ settings.button_text }}
  </button>
  <div id="feedback-modal" style="display: none; position: fixed; bottom: 80px; right: 20px; background-color: white; padding: 20px; border: 1px solid #ccc; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); width: 300px; z-index: 10000;">
    <h3>We'd love to hear your feedback!</h3>
    <input type="email" id="feedback-email" placeholder="Your email (optional)" style="width: 100%; padding: 8px; margin-bottom: 10px;" />
    <textarea id="feedback-text" placeholder="Enter your feedback here..." style="width: 100%; padding: 8px;"></textarea>
    <div style="margin-top: 10px;">
      <button id="submit-feedback" style="background-color: #007acc; color: white; padding: 10px; width: 100%;">Submit</button>
      <button id="close-modal" style="background-color: #f44336; color: white; padding: 10px; width: 100%; margin-top: 10px;">Close</button>
    </div>
  </div>
</div>

<!-- Include Feedback Widget Script -->
<script src="{{ 'feedback_icon.js' | asset_url }}" defer></script>

<!-- Schema Tag for Settings -->
{% schema %}
{
  "name": "Feedback Widget",
  "target": "section",
  "settings": [
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#007acc"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "üìù Feedback"
    }
  ]
}
{% endschema %}
